<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zomato.foodtruckmerchant" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MerchantProfile"
            android:label="@string/title_activity_merchant_profile"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LocationActivity2"
            android:label="@string/title_activity_location2"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LocationActivityFinal"
            android:label="@string/title_activity_location_activity_final"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <service
            android:name=".MerchantLocationService"
            android:exported="false" >
        </service>

        <receiver android:name=".MerchantLocationReciever" >
            <intent-filter>
                <action android:name="com.example.zomato.foodtruckmerchant.action.FOO" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".DialogCatering"
            android:label="@string/title_activity_dialog_catering"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <activity
            android:name=".DialogReminder"
            android:label="@string/title_activity_dialog_reminder"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>
