<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zomato.foodtruckmerchant.WeeklySchedule"
    tools:showIn="@layout/app_bar_weekly_schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/addCheckPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add checkpoint" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll1">

            <EditText
                android:id="@+id/checkpoint1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="checkpoint" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_weight="1"
                android:entries="@array/probable_time"></Spinner>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll2">

            <EditText
                android:id="@+id/checkpoint2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="checkpoint" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_weight="1"
                android:entries="@array/probable_time"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/ll3">

            <EditText
                android:id="@+id/checkpoint3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="checkpoint" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_weight="1"
                android:entries="@array/probable_time"></Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/ll4">

            <EditText
                android:id="@+id/checkpoint4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="checkpoint" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_weight="1"
                android:entries="@array/probable_time"></Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/ll5">

            <EditText
                android:id="@+id/checkpoint5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="checkpoint" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_weight="1"
                android:entries="@array/probable_time"></Spinner>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/seeMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:text="View Map" />

</RelativeLayout>
